<main>

  <!-- HERO -->
  <section class="hero container">
    <div class="hero-left">
      <p class="eyebrow"></p>
      <h1>
        Discover the <span class="highlight-underline">Heart</span> of the Bekaa
      </h1>
      <p class="hero-subtitle">
        Your ultimate digital guide to restaurants, wineries, hotels, and activities in the heart of the Bekaa Valley.
        Plan your visit, explore local favorites, and experience Zahle like a true insider.
      </p>

      <div class="hero-search-card">
        <div class="search-item">
          <span class="label">Explore</span>
          <span class="value">Restaurants ‚ñæ</span>
        </div>
        <div class="divider"></div>

        <div class="search-item">
          <span class="label">Date</span>
          <span class="value">26 Mar, Fri ‚ñæ</span>
        </div>
        <div class="divider"></div>

        <div class="search-item">
          <span class="label">Price</span>
          <span class="value">100$ ‚ñæ</span>
        </div>

        <button class="search-btn">üîç</button>
      </div>
    </div>

    <div class="hero-right">
      <div class="hero-grid">
        <img src="/images/zahle-1.jpg" alt="Zahle view" class="hero-img large">
        <img src="/images/zahle-2.jpg" alt="Zahle view" class="hero-img tall">
        <img src="/images/zahle-3.jpg" alt="Zahle view" class="hero-img small">
      </div>
    </div>
  </section>


 <!-- HIGHLIGHTS SECTION -->
<section class="section highlights container">

  <div class="highlights-left">
    <div class="image-card">
      <img src="/images/zahle-car.jpg" alt="Zahle street" />
      <div class="plan-tag">Plan your Own Tour</div>
    </div>
  </div>

  <div class="highlights-right">
    <p class="section-eyebrow">Discover the Charm of Zahle</p>
    <h2>Highlights of the City</h2>

    <!-- Highlight 1 -->
    <div class="highlight-item">
      <div class="icon-round">
        <img src="/images/icons/scenic.png" alt="Scenic Routes">
      </div>
      <div>
        <h3>Scenic Routes</h3>
        <p>Explore the beautiful mountains, rivers, and hidden gems around Zahle.</p>
      </div>
    </div>

    <!-- Highlight 2 -->
    <div class="highlight-item">
      <div class="icon-round">
        <img src="/images/icons/taste.png" alt="Authentic Taste">
      </div>
      <div>
        <h3>Authentic Taste</h3>
        <p>Experience Zahle‚Äôs rich culinary culture and taste traditional Lebanese flavors.</p>
      </div>
    </div>

    <!-- Highlight 3 -->
    <div class="highlight-item">
      <div class="icon-round">
        <img src="/images/icons/history.png" alt="Rich History">
      </div>
      <div>
        <h3>Rich History</h3>
        <p>Discover centuries of heritage and stories that bring the city to life.</p>
      </div>
    </div>

  </div>
</section>



  <!-- EXPLORE BY CATEGORY / CARDS -->
  <section class="section explore-category container">
    <p class="section-eyebrow">Explore by Category</p>
    <h2>Find your <span class="highlight-orange">Perfect Spot</span></h2>

    <div class="cards-carousel">
      <button class="carousel-arrow left">‚ùÆ</button>

      <div class="cards-track">

        <% if (popularPlaces.length === 0) { %>
          <p>No places added yet.</p>
        <% } %>

        <% popularPlaces.forEach(place => { %>
          <article class="place-card">
            <img src="<%= place.main_image %>" alt="<%= place.name %>" />

            <div class="place-content">

              <div class="place-rating">‚≠ê <%= place.rating %></div>

              <h3><%= place.name %></h3>

              <% if (place.price_min === 0) { %>
                <p class="price">Free /- Per person</p>
              <% } else { %>
                <p class="price">USD <%= place.price_min %>$ - <%= place.price_max %>$</p>
              <% } %>

              <div class="place-meta">
                <span>üìç <%= place.location %></span>
              </div>

            </div>
          </article>
        <% }) %>

      </div>

      <button class="carousel-arrow right">‚ùØ</button>
    </div>

    <div class="carousel-dots">
      <span class="dot active"></span>
      <span class="dot"></span>
      <span class="dot"></span>
    </div>
  </section>



  <!-- ABOUT ZAHLE SECTION -->
  <section class="section about-zahle">
    <div class="container about-grid">

      <div class="about-text">
        <p class="section-eyebrow">About Zahle</p>
        <h2>The City of Wine and Culture</h2>
        <p>
          Zahle is more than a destination‚Äîit‚Äôs an experience. Wander through its wineries, taste its famous cuisine,
          and step into a heritage shaped by centuries of tradition. Your journey starts here.
        </p>


        <div class="about-stats">
          <div>
            <h3>300+</h3>
            <p>Years of Heritage</p>
          </div>
          <div>
            <h3>15+</h3>
            <p>Renowned Wineries</p>
          </div>
          <div>
            <h3>20+</h3>
            <p>Must-Visit Spots</p>
          </div>
        </div>
        <a href="/explore" class="btn-primary">Start Exploring</a>
      </div>
      

      <div class="about-image-wrapper">
        <div class="about-shape"></div>

        <div class="about-card">
          <img src="/images/wine-cellar.jpg" alt="Wine cellar" />
          <div class="about-caption">
            Zahle, city of wine, culture, and unforgettable charm...
          </div>
        </div>
      </div>

    </div>
  </section>






</main>

