<header class="main-header glass-nav">
  <div class="container nav-container">

    <div class="logo">
      <a href="/">Zahle<span>Uncovered</span></a>
    </div>

    <nav class="main-nav">
      <a href="/" class="<%= pageTitle === 'Home' ? 'active' : '' %>">Home</a>
      <a href="/about" class="<%= pageTitle === 'About' ? 'active' : '' %>">About</a>
      <a href="/explore" class="<%= pageTitle === 'Explore' ? 'active' : '' %>">Explore</a>
      <a href="/planner" class="<%= pageTitle === 'Planner' ? 'active' : '' %>">Planner</a>
      <a href="/contact" class="<%= pageTitle === 'Contact' ? 'active' : '' %>">Contact</a>
    </nav>

    <div class="nav-icons">

      <button class="icon-btn" aria-label="Search">
        <img src="/images/icons/search.png" alt="search">
      </button>

      <button class="icon-btn" aria-label="Menu">
        <img src="/images/icons/nav.png" alt="menu">
      </button>

      <div class="account-wrapper">
        <% if (!isAuthenticated) { %>
            <button class="icon-btn" aria-label="Account" onclick="window.location.href='/signup'">
              <img src="/images/icons/user.png" alt="user">
            </button>
        <% } else { %>
            <button class="icon-btn account-btn" aria-label="Account">
              <img src="/images/icons/user.png" alt="user">
            </button>

            <div class="account-menu">
              <p class="hello">Hi, <%= user.username %> ðŸ‘‹</p>
              <a href="/planner">My Planner</a>

              <% if (user.role === "admin") { %>
                <a href="/admin">Admin Panel</a>
              <% } %>

              <a href="/logout" class="logout">Logout</a>
            </div>

        <% } %>

      </div>
    </div>
  </div>
</header>

