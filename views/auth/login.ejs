<%- include("../includes/head") %>
<%- include("../includes/navbar") %>

<link rel="stylesheet" href="/css/auth.css">

<section class="auth-container login-page">

  <!-- LEFT SIDE TEXT (Figma layout) -->
  <div class="login-left">
    <h1 class="auth-title"><span>Welcome</span> back!</h1>
    <p class="auth-subtitle">Enter your account information to sign in</p>

    <form action="/login" method="POST" class="auth-form">

      <label>Email or Username</label>
      <input
        type="text"
        name="identifier"
        placeholder="Enter your email or username"
        required
      >

      <label>Password</label>
      <input
        type="password"
        name="password"
        placeholder="Enter your password"
        required
      >

      <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
        <p class="error"><%= errorMessage %></p>
      <% } %>

      <button class="auth-btn">Sign in</button>
    </form>
  </div>

  <!-- BACKGROUND CIRCLES -->
  <div class="bg-circle circle1"></div>
  <div class="bg-circle circle2"></div>
  <div class="bg-circle circle3"></div>

</section>

