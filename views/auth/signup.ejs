<%- include("../includes/head") %>
<%- include("../includes/navbar") %>

<link rel="stylesheet" href="/css/auth.css">

<section class="auth-container signup-page">

  <!-- RIGHT SIDE FORM (Figma layout) -->
  <div class="signup-right">
    <h1 class="auth-title">Sign <span>up</span></h1>

    <form action="/signup" method="POST" class="auth-form">

      <label>Name</label>
      <input
        type="text"
        name="name"
        placeholder="Enter full name"
        required
      >

      <label>Email</label>
      <input
        type="email"
        name="email"
        placeholder="Enter email"
        required
      >

      <label>Username</label>
      <input
        type="text"
        name="username"
        placeholder="Choose a username"
        required
      >

      <label>Password</label>
      <input
        type="password"
        name="password"
        placeholder="Create a password"
        required
      >

      <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
        <p class="error"><%= errorMessage %></p>
      <% } %>

      <button class="auth-btn">Sign up</button>
    </form>
  </div>

  <!-- LEFT SIDE TEXT (Figma layout) -->
  <div class="signup-left">
    <h2 class="auth-title" style="font-size:48px;">
      Welcome <span>back!</span>
    </h2>

    <p class="auth-subtitle">
      Already have an account? Sign in here!
    </p>

    <a href="/login" class="mini-btn">Sign in</a>
  </div>

  <!-- BACKGROUND CIRCLES -->
  <div class="bg-circle circle1"></div>
  <div class="bg-circle circle2"></div>
  <div class="bg-circle circle3"></div>

</section>

<%- include("../includes/footer") %>
