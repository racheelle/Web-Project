<%- include("includes/head") %>
<%- include("includes/navbar") %>


<link rel="stylesheet" href="/css/planner.css">
<link rel="stylesheet" href="/css/planner-modal.css">


<section class="planner-list-page viewall-page">

  <div class="planner-list-header">
    <h1>Your Planners</h1>
    <a href="/planner/new" class="btn-primary">Create New Planner</a>
  </div>

  <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
    <p class="planner-error"><%= errorMessage %></p>
  <% } %>

  <% if (!planners || planners.length === 0) { %>
    <p>You donâ€™t have any planners yet. Create your first one!</p>
  <% } else { %>
    <table class="planner-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Start</th>
          <th>End</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% planners.forEach(p => { %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.start_date.toISOString ? p.start_date.toISOString().slice(0,10) : String(p.start_date).slice(0,10) %></td>
            <td><%= p.end_date.toISOString ? p.end_date.toISOString().slice(0,10) : String(p.end_date).slice(0,10) %></td>
            <td><%= p.created_at.toISOString ? p.created_at.toISOString().slice(0,10) : String(p.created_at).slice(0,10) %></td>
            <td class="planner-actions-col">
              <a href="/planner/<%= p.id %>" class="btn-small">Open</a>
              <button class="btn-small btn-danger delete-planner-btn"
        data-id="<%= p.id %>"
        data-name="<%= p.name %>">
  Delete
</button>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>


<!-- DELETE PLANNER MODAL -->
<div id="deletePlannerModal" class="planner-modal">
  <div class="planner-modal-content">
    <h3>Delete Planner</h3>
    <p id="plannerDeleteText">Are you sure you want to delete this planner?</p>

   <div class="modal-buttons">
  <form id="deletePlannerForm" method="POST">
    <button class="yes">Yes, Delete</button>
  </form>

  <button id="cancelPlannerDelete" class="no">Cancel</button>
</div>

  </div>
</div>

<script src="/js/deletePlanner.js"></script>


<%- include("includes/footer") %>
